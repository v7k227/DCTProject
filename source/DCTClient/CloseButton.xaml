<UserControl x:Class="DCTClient.CloseButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DCTClient"
             mc:Ignorable="d"
             d:DesignHeight="16" d:DesignWidth="16">
    <Grid Height="16" Width="16" HorizontalAlignment="Right" Background="#00000000">
        <Image x:Name="img_close_n" Source="UI/close_n.png" />
        <Image x:Name="img_close_h" Source="UI/close_h.png" Visibility="Collapsed" />
        <Image x:Name="img_close_p" Source="UI/close_p.png" Visibility="Collapsed" />
    </Grid>
</UserControl>